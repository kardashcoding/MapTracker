<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="location_type"
        android:title="Accurate locations"
        android:summary="Select between accurate or battery save mode."
        android:defaultValue="true" />

    <ListPreference
        android:key="seconds"
        android:title="Seconds"
        android:summary="Select minimum seconds between logging"
        android:entries="@array/seconds_array_entries"
        android:entryValues="@array/reply_values"
        android:defaultValue="1"/>


</PreferenceScreen>